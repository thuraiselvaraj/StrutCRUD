<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <package name="basicstruts2" extends="struts-default">

         <action name="login" class="com.actions.LoginAction" method="login">
         <result name="SUCCESS" type="redirect">
         <param name="location">/WEB-INF/src/views/staffHome.jsp</param>
         <param name="SessionKey">${UserMeta.SessionKey}</param>
         </result>
          
         <result name="*" type="redirect">
         <param name="Message">${Message}</param>
         <param name="location">/WEB-INF/src/views/studentHome.jsp</param>
         </result>
         </action>

         <action name="admin" class="com.actions.AdminAction" method="exec">
         <result name="*" type="redirect">
         <param name="Message">${Message}</param>
         <param name="location">/WEB-INF/src/views/adminHome.jsp</param>
         </result>
         </action>

    </package>
</struts>