<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
     <!-- <constant name="struts.convention.result.path" value="/WEB-INF/views" /> -->
    <package name="basicstruts2" extends="struts-default">
         <action name="login" class="com.actions.LoginAction" method="login">
         
         <result name="ADMIN" type="redirect">
         <param name="location">views/adminHome.jsp</param>
         <param name="SessionKey">${UserMeta.SessionKey}</param>
         </result>

         <result name="STUDENT" type="redirect">
         <param name="location">views/studentHome.jsp</param>
         <param name="SessionKey">${UserMeta.SessionKey}</param>
         </result>

         <result name="STAFF" type="redirect">
         <param name="location">views/staffHome.jsp</param>
         <param name="SessionKey">${UserMeta.SessionKey}</param>
         </result>

         <result name="SUCCESS">
         <param name="location">views/adminHome.jsp</param>
         <param name="SessionKey">${UserMeta.SessionKey}</param>
         </result>
          
         <result name="ERROR" type="redirect">
         <param name="location">/login.jsp</param>
         <param name="Message">${Message}</param>
         </result>
         </action>
<!-- 
         <action name="admin"  class="com.actions.AdminAction" method="exec">
         <result name="*" type="redirect">
         views/adminHome.jsp?Message=${Message}
         </result>
         </action> -->

         <action name="admin"  class="com.actions.AdminAction" method="exec">
         <result name="SUCCESSCS" >
                /views/adminHome.jsp
         </result>

         <result name="SUCCESSUS" type="redirectAction">
              /StrutCRUD/admin.action?ActionType=ListStaffs
         </result>

         <result name="SUCCESSGS" >
                /views/editStaff.jsp
         </result>

         <result name="SUCCESSLS" >
                /views/listAllStaffs.jsp
         </result>

          <result name="SUCCESSDS" type="redirectAction">
              /StrutCRUD/admin.action?ActionType=ListStaffs
         </result>

         <result name="*" type="redirect">
               views/dummy.jsp?Message=${Message}
         </result>
         </action>
    </package>
</struts>